% Headline and footline
\providecommand\insertframetitle{} 
\defbeamertemplate*{headline}{tigers}
{
  \vfill
  \hbox{
  \begin{tabular}[b]{c}
    \begin{minipage}{\paperwidth}
      {%\hspace{0.7cm}
      \begin{minipage}{0.96\paperwidth}
	{
	\begin{minipage}{0.1\paperwidth}
	  \inserttllogo%\hfill
	\end{minipage}
	\hfill
	\begin{minipage}{0.6\paperwidth}
 	  \vbox{%
 	  \centering{\color{tigerspurple}\textbf{\insertframetitle}}%
 	  }
	\end{minipage}
	\hfill
	\begin{minipage}{0.15\paperwidth}
	  \hfill\inserttrlogo
	\end{minipage}
	}
      \end{minipage}
      }
    \end{minipage}
    \\\hline
  \end{tabular}
  }
}

\defbeamertemplate*{footline}{tigers}
{
  \vfill
  \hbox{
  \begin{tabular}[b]{c}
    \begin{minipage}{\paperwidth}
      {\hspace{0.7cm}
      \begin{minipage}{\paperwidth}
	\vbox{%
	\tinycolouredline{structure}%
	{\color{tigersgold}\textbf{\inserttitle\hfill\insertshortdate}}%
	}
      \end{minipage}
      \begin{minipage}{0.96\paperwidth}
	{
	\begin{minipage}{0.15\paperwidth}
	  \insertlogo\hfill
	\end{minipage}
	\hfill
	\begin{minipage}{0.6\paperwidth}
	  \centering{\color{tigerspurple}\textbf{\insertshortinstitute\hfill\insertframenumber{} / \inserttotalframenumber\hfill}}
	\end{minipage}
	\hfill
	\begin{minipage}{0.15\paperwidth}
	  \hfill\insertbrlogo
	\end{minipage}
	}
      \end{minipage}
      }
    \end{minipage}
  \end{tabular}
  }
}


